<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <Button
        android:id="@+id/customizePlayerButton"
        android:layout_width="157dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/customizePlayer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customizeGameAiButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/customizeGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customizePlayerButton" />

    <Button
        android:id="@+id/playButtonAi"
        android:layout_width="266dp"
        android:layout_height="109dp"
        android:backgroundTint="@color/red"
        android:text="@string/play"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/backButtonAi"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="@string/exit"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/customizeGameAiButton"
        app:layout_constraintStart_toStartOf="@+id/customizeGameAiButton"
        app:layout_constraintTop_toBottomOf="@+id/customizeGameAiButton" />
</androidx.constraintlayout.widget.ConstraintLayout>